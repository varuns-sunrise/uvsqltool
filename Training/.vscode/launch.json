{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "UV SQL Tool - CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/uv_sql_tool/cli.py",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "purpose": ["debug-test"]
        },
        {
            "name": "UV SQL Tool - Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/uv_sql_tool/__main__.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "SQL_SERVER": "${env:SQL_SERVER}",
                "SQL_DATABASE": "${env:SQL_DATABASE}",
                "SQL_USERNAME": "${env:SQL_USERNAME}",
                "SQL_PASSWORD": "${env:SQL_PASSWORD}"
            },
            "purpose": ["debug-test"]
        },
        {
            "name": "UV SQL Tool - Config Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/uv_sql_tool/cli.py",
            "args": [
                "config",
                "test",
                "--server", "${env:SQL_SERVER}",
                "--database", "${env:SQL_DATABASE}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "purpose": ["debug-test"]
        },
        {
            "name": "UV SQL Tool - Create Table",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/uv_sql_tool/cli.py",
            "args": [
                "call-tool",
                "create_table",
                "--args", "{\"csv_file_path\": \"sample.csv\", \"table_name\": \"test_table\"}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "SQL_SERVER": "${env:SQL_SERVER}",
                "SQL_DATABASE": "${env:SQL_DATABASE}",
                "SQL_USERNAME": "${env:SQL_USERNAME}",
                "SQL_PASSWORD": "${env:SQL_PASSWORD}"
            },
            "purpose": ["debug-test"]
        }
    ]
}
